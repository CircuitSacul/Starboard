{% extends 'base.jinja' %}

{% block content %}
<br><br>
<div class='container'>
    <div class="row d-flex justify-content-center align-items-middle server-box-container bg-dark">
        {% for g in guilds %}
            <div class='col-md-2 server-box'>
                <a href="/servers/{{ g.id }}">
                    <div class='inner-server-box'>
                        <img src="{{ g.icon_url }}" class='rounded-circle' style="width: 75px;">
                        <br>
                        {{ g.name }}
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}